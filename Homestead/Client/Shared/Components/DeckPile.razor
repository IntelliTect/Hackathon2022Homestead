@using Homestead.Client.ViewModels
@using Homestead.Shared
@inject LobbyVm Lobby;


<div class="hand-card @(Lobby.Board.CanDrawFromDeck ? "selected" : "")" @onclick="click" 
        style="width:100px; height: 120px;">
   <div class="card-image">
   </div>
   <div class="card-text">
       Deck
   </div>
</div>
@code {

    private void click()
    {
        Lobby.Board.DrawFromDeck();
    }
}
