@page "/"
@using System.Net.Http
@using Homestead.Shared;
@inject HttpClient Http

<PageTitle>Index</PageTitle>

<h1>Homestead</h1>
<hr/>
<h3>
    Games
    <button @onclick="CreateGame" style="float:right" type="button">New</button>
</h3>

@if (games is null || !games.Any())
{
    <p>No games found.</p>
}
else
{
    <ul>
    @foreach (var item in games)
    {
        <li>@item.GameId</li>
    }
    </ul>
}

@code {
    private Game[]? games;

    private string playerNumber = string.Empty;

    protected override async Task OnInitializedAsync() =>
        games = await Http.GetFromJsonAsync<Game[]>("Lobby");

    private async Task CreateGame()
    {
        playerNumber = await Http.GetStringAsync("/Create");
        // TODO: remove this
        Console.WriteLine($"playerNumber: {playerNumber}");
    }
}