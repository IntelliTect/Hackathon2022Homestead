@page "/"
@using System.Net.Http
@using Homestead.Shared;
@inject HttpClient Http
@inject NavigationManager NavManager
@inject Blazored.LocalStorage.ILocalStorageService localStorage

<PageTitle>Index</PageTitle>

<h1>Homestead</h1>
<hr/>
<h3>
    Games
    <button @onclick="CreateGame" style="float:right" type="button">New</button>
</h3>

@if (games is null || !games.Any())
{
    <p>No games found.</p>
}
else
{
    <ul>
    @foreach (var item in games)
    {
        <li>@item.GameId</li>
        <li><button type="button" @onclick="()=>JoinGame(item.GameId)">Join</button></li>
        <li></li>
    }
    </ul>
}

@code {
    private Game[]? games;

    protected override async Task OnInitializedAsync() {
        games = await Http.GetFromJsonAsync<Game[]>("Lobby");
        Console.WriteLine(games.Count());
    }

    private async void CreateGame()
    {
        var game = await Http.GetFromJsonAsync<Game>("Create");
        await localStorage.SetItemAsync("game", System.Text.Json.JsonSerializer.Serialize(game));
        NavManager.NavigateTo("/gameboardpage/1");
    }

    private async void JoinGame(string gameId)
    {
